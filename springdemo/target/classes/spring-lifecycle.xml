<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd 
                           http://dubbo.apache.org/schema/dubbo 
                           http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

<bean id="beanLifeCycle" class="com.soho.beanlifecycle.BeanLifeCycle" init-method="start" destroy-method="stop" >
   <property name="name" value="zhang san"></property>
   <property name="mobile" value="123456"></property>
</bean>

<!-- 注册BeanFactoryPostProcessor -->
<bean id="myBeanFactoryPostProcessor" class="com.soho.beanlifecycle.MyBeanFactoryPostProcessor">
</bean>

<bean id="myBeanPostProcessor" class="com.soho.beanlifecycle.MyBeanPostProcessor">
</bean>

<bean  id="myInstantiationAwareBeanPostProcessor" class="com.soho.beanlifecycle.MyInstantiationAwareBeanPostProcessor">
</bean>


</beans>